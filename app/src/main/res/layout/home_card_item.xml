<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable name="homedata" type="com.android.mvvm.sample.view.main.fragments.home.HomeData"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/card_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cardImageUrl="@{homedata.cardImageUrl}"
                            tools:srcCompat="@drawable/card_image"
                            tools:ignore="MissingConstraints"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_image"
                            tools:ignore="MissingConstraints">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{homedata.description}"
                                android:textColor="@color/colorAccent"
                                android:padding="10dp"
                                android:textSize="20sp"
                                tools:text="@string/error_message"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintEnd_toStartOf="@id/price"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{homedata.price}"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimary"
                                tools:text="$10"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:text="@{homedata.validity}"
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="@{homedata.validity.length() > 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="Valid for 2019 month Jan"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>